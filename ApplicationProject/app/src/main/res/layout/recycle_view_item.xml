<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/layout_foreground"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:background="@color/red"
                android:padding="10dp"
                android:gravity="end|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_24"
                    app:tint="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/relative_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/caption6">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/letter"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="N"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/type"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/relax" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/type"
                    android:text="Nhớ uống nước"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-25"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/silver"/>

                <TextView
                    android:id="@+id/oclock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/dateTime"
                    android:textSize="12sp"
                    android:textColor="@color/silver"/>

                <ImageView
                    android:id="@+id/repeat"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@+id/oclock"
                    android:background="@drawable/baseline_repeat_24"
                    android:backgroundTint="@color/silver"
                    />

                <TextView
                    android:id="@+id/describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/repeat"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/silver"
                    android:text="Mô tả"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <ImageView
                    android:id="@+id/ringRing"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/title"
                    android:src="@drawable/notification"
                    android:layout_marginTop="10dp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>